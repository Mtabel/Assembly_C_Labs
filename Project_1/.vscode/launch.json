    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Build and debug wordsearch.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\wordsearch.exe",
            "args": ["puzzle1.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build All"
        }
    ]
}