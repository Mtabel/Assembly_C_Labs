#Testing Script
.data
x: .word 5
y: .word 6
z: .word 7


.text
Main: # Main Method
	# load the adresses of the value desired
	la $s0, x 
	la $s1, y
	la $s2, z
	
	#load data from adresses stored
	lw $s0, 0($s0)
	lw $s1, 0($s1)
	lw $s2, 0($s2)
	
	move $a0, $s0
	move $a1, $s1
	move $a2, $s2
	
	jal Method #jump and link to method
	#Read Value After ------
	move $a0, $v0 # Destroys argument data already Used / could push to stack lol
	li $v0, 1
	syscall
	#--------


j finish # jump to end



Method: #Does something
# we need to save, $ra, s 0 1 2, and return $v0 as the additon of the variables
#arguments will be x y z


#Prologue Store Required
addi $sp, $sp, -16
sw $ra, 12($sp)
sw $s0, 8($sp)
sw $s1, 4($sp)
sw $s2, 0($sp)
# ---------------
# Now you can do anything you would Like here
# Just return the value you would like in $v0 and or $v1... pref $v0 if given the op.

# Jumble up save registers so we can test the frame is working
addi $ra, $ra, 0
addi $s0, $s0, 1
addi $s1, $s1, 2
addi $s2, $s2, 3
#----------------
#add all arguments together and return in $v0
add $t0, $a0, $a1
add $t0, $t0, $a2

move $v0, $t0
#--------




#Epilogue -------------
#Load Previous Data
lw $ra, 12($sp)
lw $s0, 8($sp)
lw $s1, 4($sp)
lw $s2, 0($sp)
#Pop frame off # Return it back to OG size
addi $sp, $sp, 16


#----------------------

jr $ra#jumps to adress stored in $ra



finish: #
	li $v0, 10	#Set $v0 to 10; finish number
	syscall	#Syscall to end